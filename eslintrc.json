{
    "extends": "airbnb",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true
    },
    "plugins": [
        "import",
        "node",
        "promise"
    ],
    "globals": {
        "document": false,
        "navigator": false,
        "window": false
    },
    "rules": {
        "strict": true,
        "quotes": ["error", "double"],
        "no-unused-vars": "error",
        "camelcase": "error",
        "no-underscore-dangle": "error"
    }
}
